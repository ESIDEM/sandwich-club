<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.udacity.sandwichclub.DetailActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.udacity.sandwichclub.DetailActivity">

    <ImageView
        android:id="@+id/image_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/sandwich_picture_content_description"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/also_known"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_also_known_as_label"
        android:layout_marginEnd="16dp"
        android:layout_below="@+id/image_iv"
        android:textStyle="bold"
        android:layout_marginRight="16dp" />
    <TextView
        android:id="@+id/also_known_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/also_known"
        android:layout_toRightOf="@+id/also_known"
        android:layout_below="@+id/image_iv"/>


    <TextView
        android:id="@+id/place_of_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/also_known_tv"
        android:layout_marginEnd="16dp"
        android:text="@string/detail_place_of_origin_label"
        android:textStyle="bold"
        android:layout_marginRight="16dp" />
    <TextView
        android:id="@+id/origin_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/place_of_o"
        android:layout_toRightOf="@+id/place_of_o"
        android:layout_below="@+id/also_known_tv"/>

    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_tv"
        android:layout_marginEnd="16dp"
        android:text="@string/detail_ingredients_label"
        android:textStyle="bold"
        android:layout_marginRight="16dp" />

    <TextView
        android:id="@+id/ingredients_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/origin_tv"
        android:layout_toEndOf="@+id/ingredients"
        android:layout_toRightOf="@+id/ingredients" />


    <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingredients_tv"
        android:text="@string/detail_description_label"
        android:textStyle="bold" />
</RelativeLayout>
</ScrollView>